<h1 align='center'>All Users</h1> <!-- Header -->

<!-- Body -->
<div align='center'>
	<span class='page-btns'><%= will_paginate %></span> <!-- Pagination -->

	<!-- All users -->
	<% @users.each do |user| %>

		<!-- Each user -->
		<ul class='listing'>
		<div class='row'>
		<div class='panel panel-default col-md-4 col-md-offset-4' id='user-panel'>
		<div class='panel-body'>
		<div class='row'>

			<!-- User options dropdown -->
			<div class='col-xs-1 col-xs-offset-9' id='user-options'>
			<% if logged_in? %>
			<% if current_user == user || current_user.admin? %>
				<span class='user-options'>
				<div class='links dropdown'>
					<a href='#' class="glyphicon glyphicon-option-vertical" data-toggle='dropdown'
																							aria-haspopup='true' aria-expanded='true'>
					</a>
					<ul class='dropdown-menu' aria-labelledby='user-options'>
						<% if current_user == user %>
						<li><%= link_to 'Edit', edit_user_path(user) %></li>
						<% end %>
						<li class='delete' >
							<%= link_to 'Delete', user_path(user), method: :delete,
																		data: {confirm: 'Are you sure you want to delete this category?'} %>
						</li>
					</ul>
				</div>
				</span>
			<% end %>
			<% end %>
			</div>
			<!-- /User options dropdown -->

			<!-- Profile -->
			<li><%= link_to gravatar_for(user), user_path(user) %></li>
			<li class='user-title'>
				<%= link_to user.username, user_path(user) %>
			</li>
			<li><small><%= pluralize(user.articles.count, 'article') if user.articles %></small></li>
			<!-- Profile -->

		</div>
		</div>
		</div>
		</div>
		</ul>
		<!-- /Each user -->

	<% end %>
	<!-- /All users -->

	<span class='page-btns'><%= will_paginate %></span> <!-- Pagination -->
</div>
<!-- /Body -->